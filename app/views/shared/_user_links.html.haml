- if current_user.timesheets.exists?
  %li.dropdown.purple
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = fa_icon "clock-o 3x"
      %p Timesheets
    %ul.dropdown-menu
      %li
        = link_to "All your timesheets", user_timesheets_path(current_user)
      - if current_user.current_timesheet
        %li
          = link_to "Your current timesheet", [:edit, current_user, current_user.current_timesheet]
          .current-timesheet-ending-time.hidden= current_user.current_timesheet.end_date.strftime("%Y/%m/%d")
